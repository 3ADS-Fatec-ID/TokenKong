<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="products" minHeight="300.0" minWidth="400.0" style="-fx-background-color: #fff;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.ProductsController">
   <children>
      <HBox id="page_header" prefHeight="36.0">
         <children>
            <Button id="back_button" fx:id="go_back" mnemonicParsing="false" prefHeight="28.0" prefWidth="28.0">
               <HBox.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </HBox.margin>
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../assets/icons/light/arrow-left.png" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button id="reload_button" mnemonicParsing="false" prefHeight="28.0" prefWidth="28.0">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../assets/icons/light/reload.png" />
                     </image>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ImageView>
               </graphic>
               <HBox.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </HBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <HBox id="breadcrumb" alignment="CENTER_LEFT" maxHeight="28.0" prefHeight="28.0">
               <children>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../assets/icons/light/home-outline.png" />
                     </image>
                  </ImageView>
                  <Label text="Home / " textFill="WHITE">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <font>
                        <Font name="Poppins Regular" size="12.0" />
                     </font>
                  </Label>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../assets/icons/light/package-variant-closed.png" />
                     </image>
                  </ImageView>
                  <Label text="Products / " textFill="WHITE">
                     <font>
                        <Font name="Poppins Regular" size="12.0" />
                     </font>
                  </Label>
                  <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../assets/icons/light/pencil-outline.png" />
                     </image>
                  </ImageView>
                  <Label text="Edit" textFill="WHITE">
                     <font>
                        <Font name="Poppins Regular" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="4.0" right="10.0" />
               </padding>
               <HBox.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </HBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets left="16.0" right="16.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="32.0" style="-fx-background-color: #84a9ac; -fx-background-radius: 0 0 5 5;">
         <children>
            <Pane prefWidth="30.0" style="-fx-background-radius: 0 8 0 0; -fx-background-color: #fff;" />
            <HBox alignment="CENTER_LEFT" prefWidth="150.0" style="-fx-background-color: #fff;">
               <children>
                  <HBox alignment="CENTER" style="-fx-background-radius: 0 0 8 8; -fx-background-color: #84a9ac;" HBox.hgrow="ALWAYS">
                     <children>
                        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../assets/icons/light/pencil-outline.png" />
                           </image>
                        </ImageView>
                        <Label text="Product Edit" textFill="WHITE">
                           <font>
                              <Font name="Poppins Regular" size="18.0" />
                           </font>
                           <padding>
                              <Insets right="4.0" />
                           </padding>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </HBox>
               </children>
            </HBox>
            <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-radius: 8 0 0 0; -fx-background-color: #fff;" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <children>
            <ScrollPane fx:id="scroller" hbarPolicy="NEVER" style="-fx-border-color: #eee; -fx-border-width: 1 0 0 0;" vbarPolicy="ALWAYS" HBox.hgrow="ALWAYS">
               <content>
                  <FlowPane fx:id="products_grid" prefWrapLength="0.0" />
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
         </padding>
      </HBox>
   </children>
   <stylesheets>
      <URL value="@../stylesheets/Products.css" />
      <URL value="@../stylesheets/Page.css" />
   </stylesheets>
</VBox>
